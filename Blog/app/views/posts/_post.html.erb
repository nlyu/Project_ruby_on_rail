<p id="notice"><%= notice %></p>
  <div class='listbody'>
    <div style="background-color: white; width: 50%; height:2px; display: inline-block;">
    </div>
      <div style="font-size: 2vw; margin-top: 2.7%; text-align: center;">
        <p style="font-size: 3.5vw; font-weight: 900;"><%= post.title %></p>
      </div>
      <div style="margin-bottom: 5%; margin-left: 2%; margin-right: 2%; ">
        <div style="text-align: left; margin-left: 3%; margin-right: 3%; font-size: 24px; margin-bottom: 6%; margin-top: 6%;">
            <p><%= simple_format post.content %></p>
        </div>
        <p style="font-size: 1.8vw;">Post by: <%= post.author %></p>
        <p><%= post.updated_at %></p>
        <p style="font-size: 1.5vw;">
          <%= link_to 'Showpost', post %> 
          <% if current_user != nil && current_user.id == @user.id%>     
          <%= link_to 'Editpost', edit_post_path(post) %>        
          <%= link_to 'Destroypost', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        </p>
        <div style="background-color: white; width: 50%; height:2px; display: inline-block;">
        </div>
      </div>
  </div>
<br>
