<p id="notice"><%= notice %></p>
<div class="intro" style="margin-top: 8%; margin-bottom: 7%; font-size: 1.7vw;">
<p>Posts</p>
<div class="searchtag">
<%= form_tag({action: "search"}, method: "get") do %>
  <%= text_field_tag(:q, nil, placeholder: 'Enter author name here') %>
  <br>
  <%= submit_tag("Search by author") %>
<% end %>
<%= form_tag({action: "searchtitle"}, method: "get") do %>
  <%= text_field_tag(:q, nil, placeholder: 'Enter blog title here') %>
  <br>
  <%= submit_tag("Search by title") %>
<% end %>
<br>
<br>
</div>
<% if current_user != nil%>
<p ><%= link_to 'New Post', new_post_path %></p>
<% else %>
<p style="font-size: 2vw; color: yellow; font-weight: 900;"> View only, you have not logged in </p>
<% end %>
<p style="font-size: 1.4vw;">恰同学少年，风华正茂。</p>
</div>
    <% @posts.each do |post| %>
    <div class="postlist">
      <div style="font-size: 6vw; text-align: center;color:black; background-color: white; margin-bottom: -1.5%;">
        <p><%= simple_format post.title %></p>
      </div>
      <div style="color:white; background-color: black; padding-top: 1%;text-align: center;">
        <div style="text-align: left; margin-left: 3%; margin-right: 3%; font-size: 24px; margin-bottom: 6%; margin-top: 6%;">
            <p><%= simple_format post.content %></p>
        </div>
        <p style="font-size: 1.8vw;">Author: <%= post.author %></p>
        <p><%= post.created_at %>&nbsp;<%= post.updated_at %></p>
        <p style="background-color: white; color:black;margin-bottom: 20%;"><%= link_to 'Showpost', post %></p>
      </div>
    </div>
    <% end %>
